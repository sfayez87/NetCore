@page "{Resid:int?}"
@model NetCore.Pages.Restaurants.DetailModel
@{
    ViewData["Title"] = "Detail";
}

<h1>Detail</h1>
@if (Model.Message !=null)
{
  <div class="alert alert-success">@Model.Message</div>
}

<h2>@Model.Restaurant.Name</h2>
<div>ID: @Model.Restaurant.Id</div>
<div>Location: @Model.Restaurant.Location</div>
<div>Cuisine: @Model.Restaurant.Cuisine</div>

<a asp-page="./List" class="btn btn-primary">All Restaurants</a>
