@using NetCore.Core
@model Restaurant

<div class="panel panel-default">
    <div class="panel-heading">
        <h3>@Model.Name</h3>
    </div>
    <div class="panel-body">
        <span>Location: @Model.Location</span>
        <span>Cuisine: @Model.Cuisine</span>
    </div>
    <div class="panel-footer">
        <a asp-page="./Detail" asp-route-Resid="@Model.Id" class="btn btn-danger">Show Detail</a>
        <a asp-page="./Edit" asp-route-Resid="@Model.Id" class="btn btn-danger">Edit</a>
        <a asp-page="./Delete" asp-route-restaurantId="@Model.Id" class="btn btn-danger">Delete</a>
    </div>
</div>
